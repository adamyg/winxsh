@SET_MAKE@
ROOT=		@abs_top_builddir@
top_builddir=	@top_builddir@

# File extensions

O=		.o
H=		.h
A=		.a
LP=		lib

CLEAN=		*.bak *~ *.BAK *.swp *.tmp core *.core a.out
XCLEAN=

# Compilers, programs

CC=		@CC@
CXX=		@CXX@
AR=		@AR@
RANLIB=		@RANLIB@
RM=		@RM@
RC=		@RC@

# Common flags

ARFLAGS=	rcv
XFLAGS=
COPT=		@CFLAGS@
CXXOPT=		@CXXFLAGS@
ifeq "" "$(CXXOPT)"
CXXOPT=		$(COPT)
endif
CWARN=		@CWARN@
CDEBUG=		@CDEBUG@
LDEBUG=		@LDEBUG@
CINCLUDE=	-I$(D_INC) @CINCLUDE@ -I.
CEXTRA=		@DEFS@ -D_WIN32_WINNT=0x601
CFLAGS=		$(CDEBUG) $(COPT) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
CXXFLAGS=	$(CDEBUG) $(CXXOPT) $(CWARN) $(CINCLUDE) $(CXXEXTRA) $(XFLAGS)
YFLAGS=		-d
LDFLAGS=	$(LDEBUG) @LDFLAGS@
LXFLAGS=	$(LDLIBS)

RMFLAGS=	-f

# Directories

D_BIN=		$(ROOT)/bin@TOOLCHAINEXT@
D_INC=		$(ROOT)/include
D_OBJ=		$(ROOT)/objects@TOOLCHAINEXT@/libtermemu
D_LIB=		$(ROOT)/lib@TOOLCHAINEXT@

############################################################

LIBROOT=	NTService

CPPSOURCES=\
	NTService.cpp\
	NTServiceReg.cpp\
	NTServiceConfig.cpp\
	NTServiceControl.cpp

RESOURCES=\
	NTServMsg.rc

VPATH=		.
LIBOBJS=\
	$(addprefix $(D_OBJ)/,$(subst .c,$(O),$(CSOURCES))) \
	$(addprefix $(D_OBJ)/,$(subst .cpp,$(O),$(CPPSOURCES))) \
	$(addprefix $(D_OBJ)/,$(subst .rc,.res,$(RESOURCES)))

LIBRARY=	$(D_LIB)/$(LP)$(LIBROOT)$(A)

############################################################

all:			$(LIBRARY) $(TSKS)

$(LIBRARY):		$(D_OBJ)/.created $(LIBOBJS)
		$(RM) $(RMFLAGS) $@
		$(AR) $(ARFLAGS) $@ $(LIBOBJS)
		$(RANLIB) $@

$(D_OBJ)/.created:
		-@mkdir $(D_OBJ)
		@echo "do not create" > $@

clean:
		-@$(RM) $(RMFLAGS) $(BAK) $(LIBRARY) $(LIBOBJS) $(CLEAN) $(XCLEAN) >/dev/null 2>&1

$(D_OBJ)/%$(O):		%.c
		$(CC) $(CFLAGS) -o $@ -c $<
		
$(D_OBJ)/%$(O):		%.cpp
		$(CXX) $(CXXFLAGS) -o $@ -c $<

$(D_OBJ)/%.res:		%.rc
		$(RC) -nologo -Fo$@ -I. -I../include $<

#end

